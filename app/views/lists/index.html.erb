<h1>Save any kind of movies</h1>

<h2>My Lists</h2>

<%= link_to "Create a movie list", new_list_path %>

<ul>
  <% @lists.each do |list| %>
    <li>
      <%= link_to list.name, list_path(list) %>
      <% if list.photo.attached? %> <!-- Check if a photo is attached -->
        <div>
          <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>
